generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum Gender {
  male
  female
}

model Pet {
  id      String @id @default(uuid())
  specie  String
  gender  Gender
  details String
  orgId   String

  org Org @relation(fields: [orgId], references: [id])

  @@map("pets")
}

model Org {
  id              String @id @default(uuid())
  email           String @unique
  password_hash   String
  name            String
  address         String
  whatsApp_number String
  Pets            Pet[]

  @@map("organization")
}
